# Backend Server Configuration
PORT=3001
NODE_ENV=development  # Change to 'production' for deployment

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Hugging Face ML Integration
HF_API_TOKEN=your_huggingface_api_token_here
HF_MODEL=facebook/bart-large-mnli  # Primary model
HF_FALLBACK_MODEL=typeform/distilbert-base-uncased-mnli  # Fallback model

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window
PROD_RATE_LIMIT=50  # Production limit

# Analysis Thresholds
MIN_TEXT_LENGTH=50  # Minimum characters for analysis
MAX_TEXT_LENGTH=5000  # Maximum characters allowed
SCORE_WEIGHTS=0.4,0.3,0.2,0.1  # Clickbait,Bias,Credibility,ML weights

# Database (if applicable)
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=fake_news_db

# API Keys (for future integrations)
# GOOGLE_FACTCHECK_API_KEY=your_key
# NEWSDATA_API_KEY=your_key

# Debugging
DEBUG_MODE=true
LOG_LEVEL=verbose  # error, warn, info, verbose, debug